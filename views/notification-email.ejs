<%- include('header') %>

    <div class="container">
        <h1>Notifications and Email Reminders</h1>
        <p>Set reminders for your daily activities and receive email notifications!</p>

        <!-- Reminder Form -->
        <form id="reminderForm">
            <label for="activity">Activity:</label>
            <input type="text" id="activity" placeholder="Enter activity (e.g., Drink Water)" required>

            <label for="time">Reminder Time:</label>
            <input type="time" id="time" required>

            <label for="email">Email Address:</label>
            <input type="email" id="email" placeholder="Enter your email address" required>

            <button type="submit" class="form-button">Set Reminder</button>
        </form>

        <h2>Upcoming Reminders</h2>
        <div id="reminderList" class="reminder-list"></div>
    </div>

    <%- include('footer') %>
